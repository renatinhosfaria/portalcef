{
  "name": "@essencia/shared",
  "version": "0.0.1",
  "private": true,
  "description": "Shared types, schemas, and fetchers",
  "type": "commonjs",
  "exports": {
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./src/types/index.ts",
      "require": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./src/schemas/index.ts",
      "require": "./dist/schemas/index.js",
      "default": "./dist/schemas/index.js"
    },
    "./fetchers/client": {
      "types": "./dist/fetchers/client.d.ts",
      "import": "./src/fetchers/client.ts",
      "require": "./dist/fetchers/client.js",
      "default": "./dist/fetchers/client.js"
    },
    "./fetchers/server": {
      "types": "./dist/fetchers/server.d.ts",
      "import": "./src/fetchers/server.ts",
      "require": "./dist/fetchers/server.js",
      "default": "./dist/fetchers/server.js"
    },
    "./providers/tenant": {
      "types": "./dist/providers/tenant.d.ts",
      "import": "./src/providers/tenant.tsx",
      "require": "./dist/providers/tenant.js",
      "default": "./dist/providers/tenant.js"
    },
    "./roles": {
      "types": "./dist/roles.d.ts",
      "import": "./src/roles.ts",
      "require": "./dist/roles.js",
      "default": "./dist/roles.js"
    },
    "./role-groups": {
      "types": "./dist/role-groups.d.ts",
      "import": "./src/role-groups.ts",
      "require": "./dist/role-groups.js",
      "default": "./dist/role-groups.js"
    },
    "./schemas/calendar": {
      "types": "./dist/schemas/calendar.d.ts",
      "import": "./src/schemas/calendar.ts",
      "require": "./dist/schemas/calendar.js",
      "default": "./dist/schemas/calendar.js"
    },
    "./types/calendar": {
      "types": "./dist/types/calendar.d.ts",
      "import": "./src/types/calendar.ts",
      "require": "./dist/types/calendar.js",
      "default": "./dist/types/calendar.js"
    },
    "./config/quinzenas": {
      "types": "./dist/config/quinzenas-2026.d.ts",
      "import": "./src/config/quinzenas-2026.ts",
      "require": "./dist/config/quinzenas-2026.js",
      "default": "./dist/config/quinzenas-2026.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "lint": "eslint src/",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "next": "15.1.0",
    "react": "19.0.4",
    "react-dom": "19.0.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@essencia/config": "workspace:*",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^8.57.1",
    "typescript": "^5.7.2"
  }
}
