# Usage: docker build --build-arg APP_NAME=home --build-arg APP_PORT=3000 .
# =============================================================================

ARG APP_NAME
ARG APP_PORT=3000

# =============================================================================
# Stage 1: Dependencies
# =============================================================================
FROM node:22-alpine AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copy workspace configuration
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY .npmrc ./

# Copy all package.json files for proper workspace resolution
COPY apps/ ./apps/
COPY packages/ ./packages/
COPY services/ ./services/

# Install pnpm and dependencies
RUN corepack enable && corepack prepare pnpm@9.15.1 --activate
RUN pnpm install --frozen-lockfile

# =============================================================================
# Stage 2: Builder
# =============================================================================
FROM node:22-alpine AS builder

ARG APP_NAME
ARG APP_PORT

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps ./apps
COPY --from=deps /app/packages ./packages
COPY --from=deps /app/services ./services

# Copy source and config files
COPY package.json pnpm-workspace.yaml turbo.json tsconfig.json ./

# Enable corepack for pnpm
RUN corepack enable && corepack prepare pnpm@9.15.1 --activate

# Build shared packages first, then the specific app
RUN pnpm turbo build --filter=@essencia/shared --filter=@essencia/ui --filter=@essencia/components
RUN pnpm turbo build --filter=${APP_NAME}

# =============================================================================
# Stage 3: Runner
# =============================================================================
FROM node:22-alpine AS runner

ARG APP_NAME
ARG APP_PORT

WORKDIR /app

ENV NODE_ENV=production
ENV PORT=${APP_PORT}

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy the standalone build
COPY --from=builder --chown=nextjs:nodejs /app/apps/${APP_NAME}/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/${APP_NAME}/.next/static ./apps/${APP_NAME}/.next/static
COPY --from=builder --chown=nextjs:nodejs /app/apps/${APP_NAME}/public ./apps/${APP_NAME}/public

USER nextjs

EXPOSE ${APP_PORT}

# Set the server.js path for the standalone build
ENV HOSTNAME="0.0.0.0"

# Persist APP_NAME as env var for runtime
ENV APP_NAME=${APP_NAME}

# Use shell form to allow variable expansion
CMD node apps/${APP_NAME}/server.js
