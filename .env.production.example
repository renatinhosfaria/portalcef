# =============================================================================
# Portal EssÃªncia Feliz - Production Environment Variables
# Domain: portalcef.com.br
# =============================================================================
# USAGE:
#   1. Copy this file to the server: scp .env.production.example user@144.126.134.23:/opt/essencia/.env
#   2. SSH into server and edit: nano /opt/essencia/.env
#   3. Replace all <GENERATE> values with secure secrets
# =============================================================================

# Domain Configuration
DOMAIN=portalcef.com.br
ACME_EMAIL=admin@portalcef.com.br

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_USER=essencia
POSTGRES_PASSWORD=<GENERATE: openssl rand -hex 32>
POSTGRES_DB=essencia_db
DATABASE_URL=postgresql://essencia:${POSTGRES_PASSWORD}@postgres:5432/essencia_db

# =============================================================================
# Redis (Sessions/Cache)
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# Session & Cookies
# =============================================================================
COOKIE_SECRET=<GENERATE: openssl rand -hex 32>
COOKIE_DOMAIN=.portalcef.com.br
SESSION_TTL_HOURS=24
SESSION_RENEWAL_THRESHOLD=0.25

# =============================================================================
# API Configuration
# =============================================================================
API_INTERNAL_URL=http://api:3001
NEXT_PUBLIC_API_URL=https://api.portalcef.com.br

# =============================================================================
# MinIO Storage (Optional)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=<GENERATE: openssl rand -hex 32>
MINIO_BUCKET=essencia-bucket

# =============================================================================
# Traefik Dashboard (Optional - leave blank to disable)
# Generate with: htpasswd -nb admin <password> | sed -e s/\\$/\\$\\$/g
# =============================================================================
TRAEFIK_AUTH=

# =============================================================================
# Node Environment
# =============================================================================
NODE_ENV=production
