{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "DATABASE_URL",
        "REDIS_URL",
        "NODE_ENV",
        "DOCKER_ENV",
        "API_PORT",
        "API_HOST",
        "API_INTERNAL_URL",
        "NEXT_PUBLIC_API_URL",
        "SESSION_SECRET",
        "SESSION_TTL_HOURS",
        "SESSION_RENEWAL_THRESHOLD",
        "COOKIE_DOMAIN",
        "WATCHPACK_POLLING",
        "WATCHPACK_POLLING_INTERVAL",
        "CHOKIDAR_USEPOLLING",
        "CHOKIDAR_INTERVAL",
        "NODE_OPTIONS"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "*.config.js"]
    },
    "format": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc*", "*.config.js"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "jest.config.js"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
