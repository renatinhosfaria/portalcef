# =============================================================================
# Multi-stage Dockerfile for Next.js Apps - OPTIMIZED
# Portal Essencia Feliz - 85% smaller images
# =============================================================================
# Build with: docker build -f Dockerfile.nextjs --build-arg APP_NAME=planejamento -t essencia-planejamento .
# Reduction: 4.02GB → ~600MB (85% reduction)
# =============================================================================

ARG APP_NAME

# ========================================
# Stage 1: Dependencies
# ========================================
FROM node:22-alpine AS dependencies

ARG APP_NAME

RUN corepack enable && corepack prepare pnpm@9.15.1 --activate

WORKDIR /app

# Copy dependency manifests (apenas do app e packages necessários)
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.json ./

# Copy app package.json
COPY apps/${APP_NAME}/package.json ./apps/${APP_NAME}/

# Copy all package.json files (required for pnpm workspace resolution)
COPY packages/ui/package.json ./packages/ui/
COPY packages/components/package.json ./packages/components/
COPY packages/shared/package.json ./packages/shared/
COPY packages/tailwind-config/package.json ./packages/tailwind-config/
COPY packages/config/package.json ./packages/config/
COPY packages/lib/package.json ./packages/lib/

# Install dependencies with cache mount (app + todos os packages necessários)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile --filter ${APP_NAME} --filter @essencia/ui --filter @essencia/components --filter @essencia/shared --filter @essencia/lib

# ========================================
# Stage 2: Builder
# ========================================
FROM dependencies AS builder

ARG APP_NAME

# Copy node_modules from dependencies stage (root + packages)
COPY --from=dependencies /app/node_modules ./node_modules
COPY --from=dependencies /app/packages/ui/node_modules ./packages/ui/node_modules
COPY --from=dependencies /app/packages/components/node_modules ./packages/components/node_modules
COPY --from=dependencies /app/packages/shared/node_modules ./packages/shared/node_modules
COPY --from=dependencies /app/packages/lib/node_modules ./packages/lib/node_modules

# Copy packages source code (apenas os necessários)
COPY packages/ui ./packages/ui
COPY packages/components ./packages/components
COPY packages/shared ./packages/shared
COPY packages/tailwind-config ./packages/tailwind-config
COPY packages/config ./packages/config
COPY packages/lib ./packages/lib

# Copy app source code
COPY apps/${APP_NAME} ./apps/${APP_NAME}

# Build app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

RUN --mount=type=cache,target=/app/.turbo \
    pnpm --filter ${APP_NAME} build

# ========================================
# Stage 3: Production
# ========================================
FROM node:22-alpine AS production

ARG APP_NAME
# Convert ARG to ENV so it's available at runtime for CMD
ENV APP_NAME=${APP_NAME}

# Install dumb-init for proper signal handling
RUN apk add --no-cache dumb-init

WORKDIR /app

# Create user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Copy apenas o standalone output (Next.js já inclui apenas deps necessárias)
COPY --from=builder --chown=nodejs:nodejs /app/apps/${APP_NAME}/.next/standalone ./
COPY --from=builder --chown=nodejs:nodejs /app/apps/${APP_NAME}/.next/static ./apps/${APP_NAME}/.next/static
COPY --from=builder --chown=nodejs:nodejs /app/apps/${APP_NAME}/public ./apps/${APP_NAME}/public

# Set environment
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

USER nodejs

ENTRYPOINT ["dumb-init", "--"]

# Use shell form for CMD to enable variable expansion at runtime
CMD node apps/${APP_NAME}/server.js
