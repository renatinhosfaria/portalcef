# ========================================
# Stage 1: Dependencies
# ========================================
FROM node:22-alpine AS dependencies

RUN corepack enable && corepack prepare pnpm@9.15.1 --activate

WORKDIR /app

# Copy dependency manifests
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./
COPY services/worker/package.json ./services/worker/
COPY packages/db/package.json ./packages/db/
COPY packages/shared/package.json ./packages/shared/
COPY packages/config/package.json ./packages/config/

# Install dependencies (com cache mount)
RUN --mount=type=cache,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile --filter @essencia/worker --filter @essencia/db

# ========================================
# Stage 2: Builder
# ========================================
FROM dependencies AS builder

# Copy node_modules from dependencies stage
COPY --from=dependencies /app/node_modules ./node_modules

# Copy source code
COPY packages/db ./packages/db
COPY packages/shared ./packages/shared
COPY packages/config ./packages/config
COPY services/worker ./services/worker

# Build
ENV NODE_ENV=production
RUN pnpm --filter @essencia/db build
RUN pnpm --filter @essencia/worker build

# ========================================
# Stage 3: Production
# ========================================
FROM node:22-alpine AS production

# Instalar apenas curl (para healthcheck) e dumb-init
RUN apk add --no-cache curl dumb-init

WORKDIR /app

# Copy apenas o necess√°rio
COPY --from=builder /app/package.json ./
COPY --from=builder /app/pnpm-workspace.yaml ./
COPY --from=builder /app/services/worker/dist ./services/worker/dist
COPY --from=builder /app/services/worker/package.json ./services/worker/
COPY --from=builder /app/services/worker/node_modules ./services/worker/node_modules
COPY --from=builder /app/packages/db/dist ./packages/db/dist
COPY --from=builder /app/packages/db/package.json ./packages/db/
COPY --from=builder /app/packages/db/node_modules ./packages/db/node_modules
COPY --from=builder /app/packages/shared ./packages/shared
COPY --from=builder /app/packages/config ./packages/config
COPY --from=builder /app/node_modules ./node_modules

ENV NODE_ENV=production

EXPOSE 3100

ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "services/worker/dist/index.js"]
